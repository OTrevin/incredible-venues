        <%= f.input :end_date, as: :string, type: :text, :placeholder => "Check out" , :label => false, input_html: { value: params[:search][:end_date], class: 'date_input mt-3' }  %>
        <%= f.submit "Search", class: "search_bar_btn ml-3" %>
      </div>
      <% end %>
    </div>
</div>
