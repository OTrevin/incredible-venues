
  <%= simple_form_for(@venue) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :description %>
      <%= f.input :price_per_day, numericality: {only_integer: true} %>
      <%= f.input :capacity, numericality: {only_integer: true} %>
      <%= f.association :amenities, input_html: { multiple: true, class: 'multiple-select' }, include_hidden: false %>
      <%= f.input :photos, as: :file, input_html: {multiple: true} %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-primary"  %>
    </div>
  <% end %>

